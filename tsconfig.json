{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "preserve",
    "noEmit": true,

    "lib": ["es2023"],

    "paths": {
      "~/*": ["./src/*"],
      "~dev/*": ["./.dev/*"],
      "~scripts/*": ["./.dev/scripts/*"]
    }
  },
  "include": ["src", ".dev/**/*.ts"],
  "exclude": ["node_modules"]
}
